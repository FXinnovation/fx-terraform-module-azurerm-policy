{
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Resources/subscriptions/resourceGroups"
        },
        {
          "anyOf": [
            {
              "not": {
                "field": "tags.FXOwner",
                "like": "*"
              }
            },
            {
              "not": {
                "field": "tags.FXProject",
                "match": "...."
              }
            },
            {
              "not": {
                "field": "tags.FXDepartment",
                "like": "*"
              }
            },
            {
              "field": "tags.FXOwner",
              "match": ""
            },
            {
              "field": "tags.FXDepartment",
              "match": ""
            }
          ]
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  }
